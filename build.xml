<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE project [
        <!ENTITY zip_targets SYSTEM "file:../ziptargets.xml">
 	  <!ENTITY common SYSTEM "file:../commontargets.xml">
]>
<project basedir="." default="create-zip" name="HierarchicalClustering">
 &zip_targets;
 &common;


<target name="create-zip" depends="init">
	<antcall target="prezip"/>
	<zip destfile="${dest.dir}/${ant.project.name}.zip" whenempty="fail">
		<fileset dir=".">
		  <exclude name="*.doc"/>
		  <exclude name="build.xml"/> 
		  <exclude name="lib/**"/>
		</fileset>
		 <fileset dir="lib/"> 
		        <!-- use old gp files in case any dependencies on them -->
			<include name="*.jar"/>
		</fileset>
	</zip>
         <antcall target="postzip"/>
</target>



</project>
